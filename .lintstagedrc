{
    "linters": {
        "src/**/*.css": [
            "stylelint --fix",
            "git add"
        ],
        "src/**/*.less": [
            "stylelint --fix",
            "git add"
        ],
        "src/**/*.scss": [
            "stylelint --fix",
            "git add"
        ],
        "*.js": [
            "eslint --fix",
            "git add"
        ],
        "src/**/*.vue": [
            "stylelint --fix",
            "htmllint",
            "git add"
        ],
        "src/**/*.html": [
            "htmllint",
            "git add"
        ]
    }
}
